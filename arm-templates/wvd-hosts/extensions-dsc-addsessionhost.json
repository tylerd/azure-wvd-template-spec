{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "instance-count": {
            "type": "int",
            "metadata": {
                "description": "Number of session hosts that will be created and added to the hostpool."
            },
            "defaultValue": 2
        },
        "rdsh-prefix": {
            "type": "string",
            "metadata": {
                "description": "This prefix will be used in combination with the VM number to create the VM name. This value includes the dash, so if using “rdsh” as the prefix, VMs would be named “rdsh-0”, “rdsh-1”, etc. You should use a unique prefix to reduce name collisions in Active Directory."
            },
            "defaultValue": "rdsh"
        },
        "artifacts-location": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located."
            },
            "defaultValue": "https://wvdportalstorageblob.blob.core.windows.net/galleryartifacts/Configuration.zip"
        },
        "host-pool-name": {
            "type": "string",
            "metadata": {
                "description": "The name of the hostpool."
            },
            "defaultValue": "poolA"
        },
        "host-pool-token": {
            "type": "string",
            "metadata": {
                "description": "The token for adding VMs to the hostpool."
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "apiVersion": "2018-10-01",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('rdsh-prefix'), copyindex(), '/', 'dscextension')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "copy": {
                "name": "rdsh-dsc-loop",
                "count": "[parameters('instance-count')]"
            },
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.73",
                "autoUpgradeMinorVersion": true,
                "protectedSettings": {},
                "settings": {
                    "modulesUrl": "[parameters('artifacts-location')]",
                    "configurationFunction": "Configuration.ps1\\AddSessionHost",
                    "properties": {
                        "hostPoolName": "[parameters('host-pool-name')]",
                        "registrationInfoToken": "[parameters('host-pool-token')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}